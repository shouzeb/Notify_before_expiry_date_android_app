<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" android:background="#faede5" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Categories"
        android:id="@+id/categories_btn"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:layout_above="@+id/help_page"
        android:layout_marginBottom="56dp"
        android:layout_alignRight="@+id/scan"
        android:layout_alignEnd="@+id/scan"
        android:layout_alignLeft="@+id/scan"
        android:layout_alignStart="@+id/scan"
        android:background="#ffc19f"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/help_page"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:clickable="true"
        android:text="@string/help" />

    <Button
        android:layout_width="@dimen/abc_panel_menu_list_width"
        android:layout_height="80dp"
        android:text="Scan Product"
        android:id="@+id/scan"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#ffc19f"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inspect!"
        android:id="@+id/title"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:textColor="#ffd4ad99" />



</RelativeLayout>
