<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#faede5"
    tools:context="com.example.bayan_oh.inspect.HelpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Help"
        android:id="@+id/title"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:textColor="#ffc19f"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Common Questions"
        android:id="@+id/cqtext"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cqtext">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q: What is Inspect!?"
            android:id="@+id/q1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It&apos;s the name of our Expiration Date Tracker"
            android:id="@+id/a1"
            android:layout_below="@+id/q1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffff750b"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q: What does it do?"
            android:id="@+id/q2"
            android:layout_below="@+id/a1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It scans any product&apos;s expiration date and stores it in order to notify the user about the expiration date."
            android:id="@+id/a2"
            android:textColor="#ffff750b"
            android:layout_below="@+id/q2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_alignRight="@+id/a3"
            android:layout_alignEnd="@+id/a3"
            android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q: How to delete and edit a product or a category?"
            android:id="@+id/q3"
            android:layout_below="@+id/a2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to Categories, if you want to delete or edit a product choose the category which the product belongs to, then hold press the product or the category to display the edit and delete menu."
            android:id="@+id/a3"
            android:textColor="#ffff750b"
            android:layout_below="@+id/q3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_alignRight="@+id/a1"
            android:layout_alignEnd="@+id/a1"
            android:layout_marginLeft="@dimen/abc_action_bar_icon_vertical_padding_material" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/home_btn"
            android:layout_marginBottom="38dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#ffc19f"/>
    </RelativeLayout>

</RelativeLayout>
